{
  "name": "nest-microservice-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier \"src/**/*.ts\" ",
    "format:fix": "prettier --write \"src/**/*.ts\" ",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "update-changelog": "node .gitlab/scripts/gitlab-changelog.js",
    "check:unused-exports": "npx ts-unused-exports ./tsconfig.json",
    "packages:fix": "ncu -u -f '/^(?!.*1win)/' && npm i",
    "check:depcheck": "npx depcheck --ignores \"@types/multer\"",
    "dev:fix": "npm run lint:fix && npm run format:fix && npm run packages:fix",
    "pre-commit": "npm run lint && npm run format && npm run check:unused-exports && npm run check:packages && npm run check:depcheck"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.3",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.3",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/microservices": "10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "helmet": "^7.1.0",
    "nestjs-cls": "^4.2.0",
    "node-telegram-bot-api": "^0.64.0",
    "pg": "^8.11.3",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@types/node-telegram-bot-api": "^0.64.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "npm-check-updates": "^16.14.15",
    "prettier": "^3.2.5",
    "ts-unused-exports": "^10.0.1",
    "typescript": "^5.3.3"
  }
}
